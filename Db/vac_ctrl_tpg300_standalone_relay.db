################################################################################
# Database for TPG gauge relays for
# TPG300 Gauge Controller
# CONTROLLERNAME = devicename of the TPG controller
# GAUGE          = devicename of the gauge
# CHANNEL        = the channel of the gauge
# RELAY          = the ID of the relay that is mapped to this gauge; 1..4
# n              = 1,2,3,4 if gauge is VGC
################################################################################


alias("${CONTROLLERNAME}${R}Rly${RELAY}:NameR",          "${P}${R}Rly${n}:NameR")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:DAQTrigR",       "${P}${R}Rly${n}:DAQTrigR")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:ChanS",          "${P}${R}Rly${n}:ChanS")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:LowSPS",         "${P}${R}Rly${n}:LowSPS")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:HighSPS",        "${P}${R}Rly${n}:HighSPS")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:CommitS",        "${P}${R}Rly${n}:CommitS")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:CommitS-ErrorR", "${P}${R}Rly${n}:CommitS-ErrorR")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:LowSP-RB",       "${P}${R}Rly${n}:LowSP-RB")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:HighSP-RB",      "${P}${R}Rly${n}:HighSP-RB")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:Chan-RB",        "${P}${R}Rly${n}:Chan-RB")

alias("${CONTROLLERNAME}${R}Rly${RELAY}:StatR",          "${P}${R}Rly${n}:StatR")


record(calcout, "${P}${R}Rly${n}:iDAQTrigR")
{
  field(INPA, "${P}${R}DAQRlySelectS CP")
  field(CALC, "A + 1 == ${n}")
  field(OUT,  "${P}${R}Rly${n}:DAQTrigR PP")
}


record(stringout, "${P}${R}Rly${n}:iChanS")
{
  field(OUT,  "${CONTROLLERNAME}${R}Rly${RELAY}:ChanS PP")
  field(PINI, "YES")
  field(VAL,  "${CHANNEL}")
}
