record(ai, "$(PREFIX):$(SENSOR)-PRES-RBV") {
  field(DTYP, "stream")
  field(INP,  "@tpg300.proto get_pressure($(SENSOR),$(PREFIX):$(SENSOR)-PRES-STAT) $(TPG_PORT)")
  field(SCAN, "$(SCAN_RATE)")
  field(MDEL, "-1")
  field(SDIS, "$(PREFIX):$(SENSOR)-PRES-STAT MS")
}

record(mbbi, "$(PREFIX):$(SENSOR)-PRES-STAT") {
  field(VAL,  "0")
  field(PINI, "YES")
  field(ZRST, "DATA OK")
  field(ONST, "UNDERRANGE")
  field(ONSV, "MAJOR")
  field(TWST, "OVERRANGE")
  field(TWSV, "MAJOR")
  field(THST, "MEASUREMENT CIRCUIT ERROR")
  field(THSV, "INVALID")
  field(FRST, "MEASUREMENT CIRCUIT OFF")
  field(FRSV, "INVALID")
  field(FVST, "NO HARDWARE")
  field(FVSV, "INVALID")
}

record(mbbo, "$(PREFIX):$(SENSOR)-MODE") {
  field(ZRST, "NO SENSOR")
  field(ONST, "OFF")
  field(TWST, "AUTOMATIC")
  field(THST, "ON")
  field(FLNK, "$(PREFIX):MODE")
  field(STAT, "NO_ALARM")
  field(SEVR, "NO_ALARM")
}

record(calcout, "$(PREFIX):$(SENSOR)-MODE-INIT") {
  field(INPA, "$(PREFIX):$(SENSOR)-MODE-RBV")
  field(OUT,  "$(PREFIX):$(SENSOR)-MODE")
  field(VAL,  "0")
  field(CALC, "1")
  field(OOPT, "Transition To Non-zero")
  field(DOPT, "Use OCAL")
  field(OCAL, "A")
}

record(mbbi, "$(PREFIX):$(SENSOR)-MODE-RBV") {
  field(INP,  "$(PREFIX):MODE-RBV.$(SOURCE)")
  field(ZRST, "NO SENSOR")
  field(ONST, "OFF")
  field(TWST, "AUTOMATIC")
  field(THST, "ON")
  field(FLNK, "$(PREFIX):$(SENSOR)-MODE-INIT")
}

record(mbbo, "$(PREFIX):$(SENSOR)-FILT") {
  field(ONST, "FAST")
  field(TWST, "MEDIUM")
  field(THST, "SLOW")
  field(FLNK, "$(PREFIX):FILT")
  field(STAT, "NO_ALARM")
  field(SEVR, "NO_ALARM")
}

record(calcout, "$(PREFIX):$(SENSOR)-FILT-INIT") {
  field(INPA, "$(PREFIX):$(SENSOR)-FILT-RBV")
  field(OUT,  "$(PREFIX):$(SENSOR)-FILT")
  field(VAL,  "0")
  field(CALC, "1")
  field(OOPT, "Transition To Non-zero")
  field(DOPT, "Use OCAL")
  field(OCAL, "A")
}

record(mbbi, "$(PREFIX):$(SENSOR)-FILT-RBV") {
  field(INP,  "$(PREFIX):FILT-RBV.$(SOURCE)")
  field(ONST, "FAST")
  field(TWST, "MEDIUM")
  field(THST, "SLOW")
  field(FLNK, "$(PREFIX):$(SENSOR)-FILT-INIT")
